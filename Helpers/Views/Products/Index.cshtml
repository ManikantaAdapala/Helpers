@model List<Helpers.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Products</h2>
@Html.ActionLink("Create","Create","Products")
<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Date Of Purchase</th>
        <th>Availiability Status</th>
        <th>Category</th>
        <th>Brand</th>
        <th>Active</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model)
     {
        <tr>
            <td>@Html.DisplayFor(temp=>item.ProductName)</td>
            <td>@Html.DisplayFor(temp=>item.Price)</td>
            <td>@Html.DisplayFor(temp=>item.AvailabilityStatus)</td>
            <td>@Html.DisplayFor(temp=>item.DateOfPurchase)</td>
            <td>@Html.DisplayFor(temp=>item.Category.CategoryName)</td>
            <td>@Html.DisplayFor(temp=>item.Brand.BrandName)</td>
            <td>@Html.DisplayFor(temp=>item.Active)</td>
            <td>@Html.ActionLink("Delete", "Delete", new { productId = item.ProductID,contrller="Products"})</td>
        </tr>
     }
</table>

