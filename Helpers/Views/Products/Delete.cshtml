@model Helpers.Models.Product
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Delete</h2>
@using (Html.BeginForm("Delete", "Products", new {FormMethod.Post,id=Model.ProductID,contrller="Products"}))
 {
    <table class="table">
        <tr>
            <th>@Html.LabelFor(temp=>Model.ProductName)</th>
            <td>@Html.DisplayFor(temp => temp.ProductName)</td>
            <td>@Html.HiddenFor(temp=>temp.ProductID)</td>
        </tr>
        <tr>
            <th>@Html.LabelFor(temp=>Model.Price)</th>
            <td>@Html.DisplayFor(temp=>Model.Price)</td>
        </tr>
    </table>
    <p class="form-control">Are you sure do you want to delete this product</p>
    <button class="btn btn-success" type="submit">Delete</button>
    <a class="btn btn-danger" href="@Url.Action("Index", "Products")">Cancel</a>
 }

